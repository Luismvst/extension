{
  "manifest_version": 3,
  "name": "Mirakl CSV Extension MVP",
  "version": "0.1.0",
  "description": "Intercept Mirakl CSV exports and generate TIPSA files",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.mirakl.com/*",
    "https://*.carrefour.com/*",
    "https://*.leroymerlin.es/*",
    "https://*.adeo.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.mirakl.com/*", "https://*.carrefour.com/*", "https://*.leroymerlin.es/*", "https://*.adeo.com/*", "http://localhost:3000/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mirakl CSV Extension"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
