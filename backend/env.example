# Application Configuration
APP_NAME="Mirakl-TIPSA Orchestrator"
APP_VERSION="0.2.0"
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=["chrome-extension://*", "http://localhost:*"]

# Logging
LOG_DIR=/app/logs
LOG_FORMAT=json

# Mirakl Configuration
MIRAKL_BASE_URL=https://your-tenant.mirakl.net
MIRAKL_API_KEY=your-mirakl-api-key
MIRAKL_SHOP_ID=your-mirakl-shop-id
MIRAKL_MODE=mock

# TIPSA Configuration
TIPSA_BASE_URL=https://api.tip-sa.com
TIPSA_API_KEY=your-tipsa-api-key
TIPSA_USERNAME=your-tipsa-username
TIPSA_PASSWORD=your-tipsa-password
TIPSA_MODE=mock

# Business Rules
RULES_CONFIG_PATH=/app/rules/business_rules.json
